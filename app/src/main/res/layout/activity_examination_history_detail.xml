<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="mobile.skripsi.pawsandclaws.activities.ExaminationHistoryDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvVaccine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/vaccine"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorGray" />

        <TableLayout
            android:id="@+id/tlBasicInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvVaccine">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_column="0"
                    android:padding="5dp"
                    android:text="@string/weight"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_column="1"
                    android:padding="5dp"
                    android:text="@string/colon"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_column="2"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_column="0"
                    android:padding="5dp"
                    android:text="@string/temperature"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_column="1"
                    android:padding="5dp"
                    android:text="@string/colon"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvTemperature"
                    android:layout_column="2"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_column="0"
                    android:padding="5dp"
                    android:text="@string/due_date"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_column="1"
                    android:padding="5dp"
                    android:text="@string/colon"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvDueDate"
                    android:layout_column="2"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_column="0"
                    android:padding="5dp"
                    android:text="@string/given_date"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_column="1"
                    android:padding="5dp"
                    android:text="@string/colon"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvGivenDate"
                    android:layout_column="2"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/tvVaccineDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tlBasicInformation"
            android:padding="5dp"
            android:text="@string/vaccine_list"
            android:textColor="@color/colorPrimary" />

        <mobile.skripsi.pawsandclaws.helper.NonScrollExpandableListView
            android:id="@+id/myListVaccine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvVaccineDetail"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvMedical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myListVaccine"
            android:layout_marginBottom="8dp"
            android:text="@string/medical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorGray" />

        <TableLayout
            android:id="@+id/tlMedicalInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMedical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_column="0"
                    android:padding="5dp"
                    android:text="@string/weight"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_column="1"
                    android:padding="5dp"
                    android:text="@string/colon"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvWeightMedical"
                    android:layout_column="2"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_column="0"
                    android:padding="5dp"
                    android:text="@string/temperature"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_column="1"
                    android:padding="5dp"
                    android:text="@string/colon"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvTemperatureMedical"
                    android:layout_column="2"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_column="0"
                    android:padding="5dp"
                    android:text="@string/size"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_column="1"
                    android:padding="5dp"
                    android:text="@string/colon"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvSizeMedical"
                    android:layout_column="2"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_column="0"
                    android:padding="5dp"
                    android:text="@string/given_date"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_column="1"
                    android:padding="5dp"
                    android:text="@string/colon"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvGivenDateMedical"
                    android:layout_column="2"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/tvMedicalDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tlMedicalInformation"
            android:padding="5dp"
            android:text="@string/medical_list"
            android:textColor="@color/colorPrimary" />

        <mobile.skripsi.pawsandclaws.helper.NonScrollExpandableListView
            android:id="@+id/myListMedical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMedicalDetail" />

    </RelativeLayout>
</ScrollView>